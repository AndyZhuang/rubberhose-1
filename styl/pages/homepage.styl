html
  body
    main
      width: 100vw
      height: calc(100vh - 30px)
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: auto
      background-color: white
      display: flex
      justify-content: center
      z-index: 12
      #mainTitle
        width: 100vw
        height: 8vh
        position: absolute
        top: 20vh
        right: 0
        bottom: auto
        background-image: url(../images/logo.svg)
        background-size: auto 100%
        background-position: center center
        background-repeat: no-repeat
      #switcher
        width: 100vw
        height: 100px
        position: absolute
        top: 35vh
        right: 0
        display: flex
        justify-content: center
        align-items: center
        pointer-events: auto
        .encrypt, .decrypt
          font-size: 25px
        .switch
          width: 80px
          margin: 0 15px
          position: relative
          display: inline-block
          width: 60px
          height: 34px
          input
            display: none
          input:checked + .slider:before
            transform: translateX(26px)
          .slider
            position: absolute
            cursor: pointer
            top: 0
            left: 0
            right: 0
            bottom: 0
            background-color: #ccc
            border-radius: 34px
            transition: .4s
            &:hover
              cursor: pointer
          .slider:before
            position: absolute
            content: ""
            height: 26px
            width: 26px
            left: 4px
            bottom: 4px
            background-color: white
            border-radius: 50%
            transition: .4s
        &.disabled
          opacity: 0.5
          pointer-events: none
      form.infobox
        position: absolute
        top: calc(35vh + 100px + 1vh)
        display: flex
        flex-direction: row
        justify-content: center
        align-items: center
        user-select: none
        #upload
          height: 48px
          width: 48px
          background-image: url(../images/icons/upload_graay.svg)
          background-size: 175% 175%
          background-position: center center
          background-repeat: no-repeat
          user-select: none
          transition: 0.35s
          &:hover, &.active
            transition: 0.35s
        #upload, p
          opacity: 1
          pointer-events: auto
          transition: 0.35s
        p
          font-size: 25px
          line-height: 25px
          margin: 0
          padding: 0 10px
          color: graaay
          transition: 0.35s
          span
            cursor: pointer
            transition: 0.35s
            &:hover, &.active
              transition: 0.35s
        #input
          height: 48px
          width: 50%
          padding: 8px
          font-size: 25px
          line-height: 25px
          border: solid 2px lightlightgray
          box-shadow: 0 4px 10px rgba(#2F2F2F, 0.15)
          opacity: 1
          pointer-events: auto
          resize: none
          user-select: none
          transition: 0.35s
          &::placeholder
            color: graaay
            transition: 0.35s
          &:hover
            box-shadow: 0 8px 10px rgba(#2F2F2F, 0.20)
            transition: 0.35s
            &::placeholder
              color: comfortblue
              transition: 0.35s
          &.wide
            width: 60vw 
            transition: 0.35s
        a#selectFile.cta
          width: 250px
          height: 125px
          position: absolute
          top: 1vh
          display: none
          border: solid 2px lightlightgray
          box-shadow: 0 4px 10px rgba(#2F2F2F, 0.15)
          //border: 2px solid black
          overflow: hidden
          transition: 0.35s
          .icon
            width: 40px
            height: 40px
            position: absolute
            top: 10px
            right: 5px
            background-color: none
            background-size: 100% auto
            background-position: center center
            background-repeat: no-repeat
            transition: 0.35s
          .name, .title
            max-width: calc(100% - 10px)
            color: black
            position: absolute
            bottom: 5px
            left: 5px
            font-size: 20px
            transition: 0.35s
          .title
            color: white
            right: 5px
            text-align: right
            user-select: none
            pointer-events: none
          &:hover
            //background: black
            box-shadow: 0 8px 10px rgba(#2F2F2F, 0.20)
            transition: 0.35s
            .icon
              background-image: url(../images/icons/docfile_black.svg)
              transition: 0.35s
            .name
              color: white
              transition: 0.35s
            .title
              color: black
              transition: 0.35s
        #infobox_buttons
          position: absolute
          display: none
          opacity: 0
          pointer-events: none
          select
            transition: none !important
          .spans
            width: 60vw
            padding: 10px 0
            display: flex
            justify-content: center
            align-items: center
            span
              padding: 0 20px
          .submit
            margin: 15px 0 0 0
      form.infobox.wide
        width: 60vw
        align-items: flex-start
        #upload, p
          opacity: 0
          pointer-events: none
          transition: 0.35s
        #input
          max-height: 20vh
          position: absolute
          left: 0
          right: 0
          color: graaay
          font-family: monospace
          resize: auto
          &::placeholder, &:hover::placeholder
            color: white
          &:hover
            &::placeholder, &:hover::placeholder
              color: white
          &.disabled
            opacity: 0
            pointer-events: none
        #infobox_buttons
          position: fixed
          bottom: 24vh
          display: flex
          flex-direction: column
          align-items: center
          opacity: 1
          pointer-events: auto
          .spans
            display: flex
            flex-direction: row
          .submit
            width: 150px
      form.infobox.wide.strategy_upload
        a#selectFile.cta
          display: block
      //form.infobox.wide.strategy_type

html[theme="blue"]
  *
    transition: 0.35s ease-in-out
  body
    input, textarea
      transition: none
    main
      #switcher
        .switch
          input + .slider
            background-color: rubberhose_blue
          input:focus + .slider
            box-shadow: 0 0 1px rubberhose_blue
      form.infobox
        #upload
          &:hover, &.active
            background-image: url(../images/icons/upload_blue.svg)
      a#selectFile.cta .icon
        background-image: url(../images/icons/docfile_blue.svg)
      form.infobox
        p
          span
            &:hover, &.active
              color: rubberhose_blue
        #input
          &:hover
            &::placeholder
              color: rubberhose_blue
